# Auto detect text files and normalize line endings to LF in repository
* text=auto

# Explicitly set line endings for specific file types
*.java text eol=lf
*.ts text eol=lf
*.js text eol=lf
*.json text eol=lf
*.md text eol=lf
*.gradle text eol=lf
*.properties text eol=lf
*.xml text eol=lf
*.html text eol=lf
*.css text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.jar binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.class binary

# Gradle wrapper should be executable
gradlew text eol=lf
